{
  "name": "@ga-ut/store-vue",
  "version": "0.0.2",
  "private": false,
  "type": "commonjs",
  "description": "Vue adapter for @ga-ut/store-core. Create refs from store slices and bind actions for Composition API.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "vue",
    "ref",
    "composition-api",
    "state",
    "store",
    "state-management",
    "typescript"
  ],
  "homepage": "https://github.com/ga-ut/store",
  "repository": {
    "type": "git",
    "url": "https://github.com/ga-ut/store.git",
    "directory": "packages/vue"
  },
  "bugs": {
    "url": "https://github.com/ga-ut/store/issues"
  },
  "author": "ga-ut",
  "license": "MIT",
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@ga-ut/store-core": "workspace:^"
  },
  "peerDependencies": {
    "vue": ">=3"
  },
  "scripts": {
    "build": "node build",
    "test": "vitest run",
    "pub": "pnpm run build && pnpm publish --access public"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.5.2",
    "@testing-library/vue": "^8.1.0",
    "@vitejs/plugin-vue": "^5.1.2",
    "vue": "^3.4.38"
  }
}
